{
    "manifest_version": 3,
    "name": "Speech Navigator for Visually Impaired",
    "description": "A browser extension that helps visually impaired users navigate websites using speech interaction and STS (Speech-to-Speech) functionality.",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tts",
        "microphone",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Activate the speech command"
        }
    },
    "tts_engine": {
        "voices": [
            {
                "voice_name": "default",
                "lang": "en-US",
                "gender": "female",
                "event_types": [
                    "start",
                    "end",
                    "error"
                ]
            }
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "contentScript.js",
                "popup.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tts",
        "microphone",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "speech_recognition": {
        "grammar": {
            "commands": [
                "go to home",
                "scroll down",
                "click sign up",
                "navigate to login",
                "search for *"
            ]
        },
        "continuous": true
    }
}