{
    "manifest_version": 3,
    "name": "AI Accessibility Assistant",
    "version": "1.0",
    "description": "An AI-powered accessibility assistant for web browsing",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}